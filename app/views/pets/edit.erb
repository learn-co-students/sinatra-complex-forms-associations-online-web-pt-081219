<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
<form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label>Edit the Pet's Name: <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"></label>
    <br />
    <p>Select an existing owner or create a new one below.</p>
    
    <fieldset>
        <legend><h3>Existing Owners</h3></legend>
        <% Owner.all.each do |owner| %>
            <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %><br />
        <% end %>
    </fieldset>

    <fieldset>
        <legend><h3>New Owner</h3></legend>
        <p><label>Owner Name: <input type="text" name="owner[name]" id="owner_name"></label></p>
    </fieldset>
    <br/>
    <input type="submit" value="Update Pet">
</form>



