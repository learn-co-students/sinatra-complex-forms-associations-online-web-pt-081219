  
<h1>Create a new Pet</h1>

<form action="/pets" method="post">
    <label for="pet_name">Name: </label>
    <input type="text" name="pet[name]" id="pet_name" placeholder="Name">
    <br>
    <label>Owner</label>
    <br>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
      <% end %>
    <br>
    <label>OR create new owner: </label>
    <br>
    <input type="text" name="owner_name" id="owner_name" placeholder="Owner Name">
    <br>
    <input type="submit" id="create_pet" value="Create Pet">
</form>